{
  "name": "sea-pay",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@10.26.2",
  "devDependencies": {
    "next": "16.1.1"
  },
  "scripts": {
    "dev": "pnpm -r --parallel --filter @seapay/app --filter @seapay/webhook --filter @seapay/web dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r exec rm -rf dist .next out node_modules",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "devapp": "pnpm -r --parallel --filter @seapay/app --filter @seapay/webhook dev",
    "web": "pnpm --filter @seapay/web dev"
  }
}
